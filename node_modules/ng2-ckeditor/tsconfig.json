{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "lib",
    "declaration": true,
    "rootDir": "."
  },
  "include": [
    "ng2-ckeditor.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}